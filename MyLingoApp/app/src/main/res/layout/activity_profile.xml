<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="faakltd.mylingoapp.ChoseLanguage"
    android:id="@+id/ChoseLanguage"
    android:background="#06A2CB">



    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/logoutG"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#D0C6B1" />

    <ImageView
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:id="@+id/imageView"
    android:background="@drawable/logoimage"
    android:layout_below="@+id/button10"
    android:layout_alignLeft="@+id/russianBtn"
    android:layout_alignStart="@+id/russianBtn"
    android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a language to learn today:"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/resultsView"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/logoutG"
        android:layout_alignEnd="@+id/logoutG"
        android:layout_marginTop="20dp" />


</RelativeLayout>
